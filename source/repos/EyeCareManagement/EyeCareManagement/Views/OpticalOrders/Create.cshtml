@model OpticalOrder
@{
    ViewData["Title"] = "Create Optical Order";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create Optical Order</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Optical Order Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="DoctorId" type="hidden" />

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label">Patient</label>
                            <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                                <option value="">Select Patient</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Order Type</label>
                            <select asp-for="Type" class="form-control">
                                <option value="">Select Type</option>
                                <option value="Eyeglasses">Eyeglasses</option>
                                <option value="ContactLenses">Contact Lenses</option>
                                <option value="SunGlasses">Sun Glasses</option>
                                <option value="ReadingGlasses">Reading Glasses</option>
                                <option value="SafetyGlasses">Safety Glasses</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="OrderDate" class="form-label">Order Date</label>
                            <input asp-for="OrderDate" type="date" class="form-control" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <h5 class="mt-4 mb-3">Prescription Details</h5>
                <div class="row">
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="RightEyeSphere" class="form-label">OD Sphere</label>
                            <input asp-for="RightEyeSphere" class="form-control" placeholder="+2.00" />
                            <span asp-validation-for="RightEyeSphere" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="RightEyeCylinder" class="form-label">OD Cylinder</label>
                            <input asp-for="RightEyeCylinder" class="form-control" placeholder="-1.00" />
                            <span asp-validation-for="RightEyeCylinder" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="RightEyeAxis" class="form-label">OD Axis</label>
                            <input asp-for="RightEyeAxis" class="form-control" placeholder="90" />
                            <span asp-validation-for="RightEyeAxis" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="LeftEyeSphere" class="form-label">OS Sphere</label>
                            <input asp-for="LeftEyeSphere" class="form-control" placeholder="+2.00" />
                            <span asp-validation-for="LeftEyeSphere" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="LeftEyeCylinder" class="form-label">OS Cylinder</label>
                            <input asp-for="LeftEyeCylinder" class="form-control" placeholder="-1.00" />
                            <span asp-validation-for="LeftEyeCylinder" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="LeftEyeAxis" class="form-label">OS Axis</label>
                            <input asp-for="LeftEyeAxis" class="form-control" placeholder="90" />
                            <span asp-validation-for="LeftEyeAxis" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PupillaryDistance" class="form-label">Pupillary Distance (PD)</label>
                            <input asp-for="PupillaryDistance" class="form-control" placeholder="62mm" />
                            <span asp-validation-for="PupillaryDistance" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="EstimatedCost" class="form-label">Estimated Cost</label>
                            <input asp-for="EstimatedCost" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="EstimatedCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="FrameDetails" class="form-label">Frame Details</label>
                    <input asp-for="FrameDetails" class="form-control" placeholder="Brand, Model, Color, Size" />
                    <span asp-validation-for="FrameDetails" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="LensType" class="form-label">Lens Type</label>
                            <input asp-for="LensType" class="form-control" placeholder="Single Vision, Bifocal, Progressive" />
                            <span asp-validation-for="LensType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="LensCoating" class="form-label">Lens Coating</label>
                            <input asp-for="LensCoating" class="form-control" placeholder="Anti-reflective, UV Protection" />
                            <span asp-validation-for="LensCoating" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="SpecialInstructions" class="form-label">Special Instructions</label>
                    <textarea asp-for="SpecialInstructions" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Order
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}