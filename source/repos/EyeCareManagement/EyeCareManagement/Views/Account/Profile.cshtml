@model ApplicationUser
@{
    ViewData["Title"] = "Profile";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">User Profile</h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Profile Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Username:</strong> @Model.UserName</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Role:</strong> @Model.Role</p>
                            <p><strong>Phone:</strong> @(Model.PhoneNumber ?? "Not provided")</p>
                            <p><strong>Email Confirmed:</strong> @(Model.EmailConfirmed ? "Yes" : "No")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Account Actions</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Contact your administrator to update profile information or change your role.</p>
                    <form method="post" asp-controller="Account" asp-action="Logout" class="mt-3">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>