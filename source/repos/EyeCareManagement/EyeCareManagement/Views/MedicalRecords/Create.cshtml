@model MedicalRecord
@{
    ViewData["Title"] = "Add Medical Record";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Medical Record</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Medical Record Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="DoctorId" type="hidden" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label">Patient <span class="text-danger">*</span></label>
                            <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                                <option value="">Select Patient</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="VisitDate" class="form-label">Visit Date</label>
                            <input asp-for="VisitDate" type="date" class="form-control" />
                            <span asp-validation-for="VisitDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="VisualAcuityRight" class="form-label">Visual Acuity OD (Right Eye)</label>
                            <input asp-for="VisualAcuityRight" class="form-control" placeholder="20/20" />
                            <span asp-validation-for="VisualAcuityRight" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="VisualAcuityLeft" class="form-label">Visual Acuity OS (Left Eye)</label>
                            <input asp-for="VisualAcuityLeft" class="form-control" placeholder="20/20" />
                            <span asp-validation-for="VisualAcuityLeft" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IntraocularPressureRight" class="form-label">IOP OD (mmHg)</label>
                            <input asp-for="IntraocularPressureRight" type="number" step="0.1" class="form-control" />
                            <span asp-validation-for="IntraocularPressureRight" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IntraocularPressureLeft" class="form-label">IOP OS (mmHg)</label>
                            <input asp-for="IntraocularPressureLeft" type="number" step="0.1" class="form-control" />
                            <span asp-validation-for="IntraocularPressureLeft" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Diagnosis" class="form-label">Diagnosis</label>
                    <textarea asp-for="Diagnosis" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Treatment" class="form-label">Treatment</label>
                    <textarea asp-for="Treatment" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Treatment" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Prescription" class="form-label">Prescription</label>
                    <textarea asp-for="Prescription" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Prescription" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NextVisitDate" class="form-label">Next Visit Date</label>
                            <input asp-for="NextVisitDate" type="date" class="form-control" />
                            <span asp-validation-for="NextVisitDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Medical Record
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}