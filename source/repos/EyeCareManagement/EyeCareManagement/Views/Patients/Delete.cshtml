@model Patient
@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Delete Patient</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4 border-danger">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">Confirm Patient Deletion</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning!</strong> This action cannot be undone. All related medical records, appointments, and billing information will also be deleted.
            </div>

            <h5>Are you sure you want to delete this patient?</h5>

            <div class="row mt-4">
                <div class="col-md-6">
                    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMM dd, yyyy")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Age:</strong> @((DateTime.Now - Model.DateOfBirth).Days / 365) years</p>
                    <p><strong>Gender:</strong> @Model.Gender</p>
                    <p><strong>Patient Since:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    <p><strong>Emergency Contact:</strong> @Model.EmergencyContact</p>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <p><strong>Address:</strong> @Model.Address</p>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input asp-for="Id" type="hidden" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Yes, Delete Patient
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>