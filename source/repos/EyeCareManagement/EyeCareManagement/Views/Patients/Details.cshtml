@model Patient
@{
    ViewData["Title"] = "Patient Details";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Patient Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Edit Patient
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Patient Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Age:</strong> @((DateTime.Now - Model.DateOfBirth).Days / 365) years</p>
                            <p><strong>Gender:</strong> @Model.Gender</p>
                            <p><strong>Emergency Contact:</strong> @Model.EmergencyContact</p>
                            <p><strong>Emergency Phone:</strong> @Model.EmergencyContactPhone</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p><strong>Address:</strong> @Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <a asp-controller="Appointments" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-primary btn-block mb-2">
                        <i class="fas fa-calendar-plus"></i> Schedule Appointment
                    </a>
                    <a asp-controller="MedicalRecords" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-success btn-block mb-2">
                        <i class="fas fa-plus"></i> Add Medical Record
                    </a>
                    <a asp-controller="Bills" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-info btn-block">
                        <i class="fas fa-receipt"></i> Create Bill
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>